    "codex": "^0.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.27.3",
    "express": "^4.18.2",
    "google-auth-library": "^10.5.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
