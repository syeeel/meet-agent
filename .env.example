# LiveKit Configuration
# Get credentials from https://cloud.livekit.io
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Google Gemini API Configuration
# Get your API key from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Hedra Configuration
# Get your API key from https://www.hedra.com/api-profile
HEDRA_API_KEY=your_hedra_api_key_here
# Avatar asset ID (upload via Hedra API, see README)
HEDRA_AVATAR_ID=your_hedra_avatar_asset_id_here

# Recall.ai Configuration
# Get your API key from https://recall.ai dashboard
RECALL_API_KEY=your_recall_api_key_here
# Region: 'asia' (ap-northeast-1 Tokyo), 'us' (us-west-2), 'eu' (eu-west-1)
RECALL_API_REGION=asia

# Server Configuration
PORT=3000

# Base URL for the bot page (use ngrok URL in development)
# Example: https://abc123.ngrok.io
BASE_URL=http://localhost:3000

# Environment
NODE_ENV=development
