# Recall.ai Configuration
# Get your API key from https://recall.ai dashboard
RECALL_API_KEY=your_recall_api_key_here

# Region: 'asia' (ap-northeast-1 Tokyo), 'us' (us-west-2), 'eu' (eu-west-1)
RECALL_API_REGION=asia

# Google Cloud Configuration
# API key for TTS: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Service account for STT (Chirp 2): IAM → Service Accounts → Create Key → JSON
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# GCP Project ID (found in GCP Console dashboard)
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here

# Gemini API Configuration
# Get your API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000

# Base URL for the bot page (use ngrok URL in development)
# Example: https://abc123.ngrok.io
BASE_URL=http://localhost:3000

# HeyGen Streaming Avatar (optional - falls back to Google TTS if not set)
# Get your API key from https://www.heygen.com/
HEYGEN_API_KEY=
# Avatar ID from HeyGen dashboard (default: Wayne_20240711)
HEYGEN_AVATAR_NAME=Wayne_20240711

# Environment
NODE_ENV=development
