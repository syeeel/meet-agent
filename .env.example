# Recall.ai Configuration
# Get your API key from https://recall.ai dashboard
RECALL_API_KEY=your_recall_api_key_here

# Region: 'asia' (ap-northeast-1 Tokyo), 'us' (us-west-2), 'eu' (eu-west-1)
RECALL_API_REGION=asia

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AssemblyAI Configuration
# Get your API key from https://www.assemblyai.com/dashboard
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Google Cloud Configuration
# Get your API key from https://console.cloud.google.com/apis/credentials
# Enable "Cloud Text-to-Speech API" first
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Model to use (gpt-4, gpt-4-turbo, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4

# Server Configuration
PORT=3000

# Base URL for the bot page (use ngrok URL in development)
# Example: https://abc123.ngrok.io
BASE_URL=http://localhost:3000

# Environment
NODE_ENV=development
